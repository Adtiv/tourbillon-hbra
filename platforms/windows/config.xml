<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hbra" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="windows-target-version" value="8.0" />
    <preference name="windows-phone-target-version" value="8.1" />
    <name>HBRA</name>
    <description>
        App for HBRA Inspections
    </description>
    <author email="youngtyj@hotmail.com" href="http://example.com">
        Tyler Young
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <Capabilities>
        <Capability Name="ID_CAP_ISV_CAMERA" />
        <Capability Name="ID_HW_FRONTCAMERA" />
    </Capabilities>
    <gap:plugin name="com.performanceactive.plugins.camera" version="1.3" />
    <gap:plugin name="de.appplant.cordova.plugin.email-composer" version="0.8.2" />
</widget>
