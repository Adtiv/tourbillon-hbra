<?xml version='1.0' encoding='utf-8'?>
<widget id="com.example.hbra" version="0.0.1" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <preference name="loglevel" value="DEBUG" />
    <feature name="Camera">
        <param name="android-package" value="org.apache.cordova.camera.CameraLauncher" />
    </feature>
    <name>HBRA</name>
    <description>
        App for HBRA Inspections
    </description>
    <author email="youngtyj@hotmail.com" href="http://example.com">
        Tyler Young
    </author>
    <content src="index.html" />
    <access origin="*" />
    <preference name="Orientation" value="portrait" />
    <preference name="Fullscreen" value="true" />
    <Capabilities>
        <Capability Name="ID_CAP_ISV_CAMERA" />
        <Capability Name="ID_HW_FRONTCAMERA" />
    </Capabilities>
    <gap:plugin name="com.performanceactive.plugins.camera" version="1.3" />
</widget>
