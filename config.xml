<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.hbra" version="1.0.4" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>HBRA</name>
    <description>
        App for HBRA Inspections
    </description>
    <author email="datocco13@gmail.com" href="http://example.com">
        Anthony Ditocco 
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-6.5.0" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="fullscreen" value="true" />
    <preference name="permissions" value="none" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.3.0" />
    <gap:config-file platform="ios" parent="NSPhotoLibraryUsageDescription">
        <string>For saving site photo images</string>
    </gap:config-file>
    <gap:config-file platform="ios" parent="NSCameraUsageDescription">
        <string>For capturing site photos</string>
    </gap:config-file>
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.0" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.3" />
    <plugin source="git" spec="https://github.com/hypery2k/cordova-email-plugin" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <icon src="icon.png" />
    </platform>
    <platform name="ios">
        <icon src="icon.png" />
        <icon src="icon-58.png" width="58" height="58" />
        <icon src="icon-76.png" width="76" height="76" />
        <icon src="icon-87.png" width="87" height="87" />
        <icon src="icon-152.png" width="152" height="152" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
    <engine name="ios" spec="~4.3.1" />
    <engine name="android" spec="~6.1.2" />
</widget>
