<?xml version='1.0' encoding='utf-8'?>
<widget id="com.phonegap.hbra" version="1.0.7" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>JOB SITE SAFETY</name>
    <description>
        App for HBRA Inspections
    </description>
    <author email="datocco13@gmail.com" href="http://example.com">
        Anthony Ditocco 
    </author>
    <content src="index.html" />
    <preference name="phonegap-version" value="cli-7.0.1" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="android-minSdkVersion" value="14" />
    <preference name="fullscreen" value="true" />
    <preference name="permissions" value="none" />
    <preference name="target-device" value="universal" />
    <preference name="webviewbounce" value="true" />
    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="SplashScreenDelay" value="0" />
    <preference name="FadeSplashScreenDuration" value="0" />
    <preference name="disable-cursor" value="false" />
    <preference name="android-installLocation" value="auto" />
    <preference name="AndroidPersistentFileLocation" value="Compatibility" />
    <plugin name="cordova-plugin-camera" source="npm" spec="~2.3.0" />
    <gap:config-file parent="NSPhotoLibraryUsageDescription" platform="ios">
        <string>For saving site photo images</string>
    </gap:config-file>
    <gap:config-file parent="NSCameraUsageDescription" platform="ios">
        <string>For capturing site photos</string>
    </gap:config-file>
    <plugin name="cordova-plugin-device" source="npm" spec="~1.1.3" />
    <plugin name="cordova-plugin-dialogs" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-file" source="npm" spec="~4.3.0" />
    <plugin name="cordova-plugin-inappbrowser" source="npm" spec="~1.3.0" />
    <plugin name="cordova-plugin-statusbar" source="npm" spec="~2.1.3" />
    <plugin source="git" spec="https://github.com/hypery2k/cordova-email-plugin" />
    <preference name="StatusBarBackgroundColor" value="#FFFFFF" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <platform name="android">
        <icon src="SafetyLogo.png" />
    </platform>
    <platform name="ios">
        <icon src="SafetyLogo.png" />
        <icon height="58" src="SafetyLogo-58.png" width="58" />
        <icon height="76" src="SafetyLogo-76.png" width="76" />
        <icon height="87" src="SafetyLogo-87.png" width="87" />
        <icon height="152" src="SafetyLogo-152.png" width="152" />
        <icon height="144" src="SafetyLogo-72-2x.png" width="144" />
        <icon height="57" src="SafetyLogo-57.png" width="57" />
        <icon height="114" src="SafetyLogo-57-2x.png" width="114" />
        <icon height="72" src="SafetyLogo-72.png" width="72" />
        <splash height="480" src="res/screen/ios/Default~iphone.png" width="320" />
        <splash height="960" src="res/screen/ios/Default@2x~iphone.png" width="640" />
        <splash height="1024" src="res/screen/ios/Default-Portrait~ipad.png" width="768" />
        <splash height="2048" src="res/screen/ios/Default-Portrait@2x~ipad.png" width="1536" />
        <splash height="768" src="res/screen/ios/Default-Landscape~ipad.png" width="1024" />
        <splash height="1536" src="res/screen/ios/Default-Landscape@2x~ipad.png" width="2048" />
        <splash height="1136" src="res/screen/ios/Default-568h@2x~iphone.png" width="640" />
        <splash height="1334" src="res/screen/ios/Default-667h.png" width="750" />
        <splash height="2208" src="res/screen/ios/Default-736h.png" width="1242" />
        <splash height="1242" src="res/screen/ios/Default-Landscape-736h.png" width="2208" />
    </platform>
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
